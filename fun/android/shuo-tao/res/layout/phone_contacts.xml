<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/phoneContactsLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/tvPhoneContactsName"
		android:layout_marginLeft="10px" style="@style/fontBlack16sp" />
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/tvPhoneContactsMobile"
		android:layout_toRightOf="@id/tvPhoneContactsName"
		android:layout_marginLeft="10px" style="@style/fontBlack16sp" />

</RelativeLayout>
