<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_marginBottom="5dip" android:layout_marginTop="5dip" android:layout_height="wrap_content">

	<!-- fullname -->
	<TextView android:id="@+id/contact_list_item_tv_fullname"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerVertical="true" android:layout_marginLeft="5.0dip"
		android:layout_alignParentLeft="true" style="@style/ContactListNameText"
		android:singleLine="true" />
	<!-- company -->
	<TextView android:id="@+id/contact_list_item_tv_company"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_centerVertical="true" android:layout_marginLeft="10.0dip"
		android:layout_marginRight="20dip" android:layout_alignParentRight="true"
		android:layout_toRightOf="@id/contact_list_item_tv_fullname"
		android:gravity="right" style="@style/ContactListCompanyText" />

</RelativeLayout>
